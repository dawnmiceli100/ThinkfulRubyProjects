<h1>Wikiful Articles</h1>
<% @articles.each do |article| %>
	<div>
		<h3><%= link_to article.title, article %></h3>
		<p>Published on <%= l(article.created_at) %></p>
		<p>Categorized under: <%= article.categories.each do |category| %>
						<%= category.name %>&nbsp;
						<% end %>
		</p>
		<p><%= truncate(article.content,length: 200) %></p>
	</div>
<% end %>	